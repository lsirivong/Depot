<!-- This partial is named line_item, so we expect to have a variable called as such -->
<% if line_item == @current_item %>
<tr id="current_item">
<% else %>
<tr>
<% end %>
  <td><%= line_item.quantity %>&times;</td>
  <td><%= line_item.product.title %></td>
  <td class="item_price"><%= number_to_currency(line_item.total_price) %></td>
  <td><%= link_to('-', line_item, :method => :delete, :remote => true)%>
</tr>
